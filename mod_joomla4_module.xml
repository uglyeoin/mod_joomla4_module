	<name>MOD_JOOMLA4_MODULE</name>
	<author>Eoin Oliver</author>
	<creationDate>July 2020</creationDate>
	<copyright>Copyright (C) 2020 Eoincorp. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>email@eoincorp.com</authorEmail>
	<authorUrl>www.eoincorp.com</authorUrl>
	<version>0.1.0</version>
	<description>MOD_JOOMLA4_MODULE_XML_DESCRIPTION</description>
<!--	<namespace path="src">Joomla\Module\ArticlesCategory</namespace>-->
	<files>
		<filename module="mod_joomla4_module">mod_joomla4_module.php</filename>
		<folder>languages</folder>
		<folder>tmpl</folder>
	</files>
	<languages folder="languages/en-GB">
		<language tag="en-GB">en-GB.mod_joomla4_module.ini</language>
		<language tag="en-GB">en-GB.mod_joomla4_module.sys.ini</language>
	</languages>
	<config>
		<fieldset name="basic">
			<field
					name="myName"
					type="text"
					default="Eoin"
					label="MOD_JOOMLA4_MODULE_MYNAME_LABEL"
					description="MOD_JOOMLA4_MODULE_MYNAME_DESCRIPTION"
					size="10"
			/>
			<field
					name="salutation"
					type="list"
					default=""
					required="true"
					label="Select an option"
					description=""
			>
				<option value="">Please Select</option>
				<option value="0">MOD_JOOMLA4_MODULE_SALUTATION_OPTION_MR</option>
				<option value="1">MOD_JOOMLA4_MODULE_SALUTATION_OPTION_MRS</option>
			</field>
		</fieldset>
	</config>
</extension>
